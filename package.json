{
  "name": "dql-format",
  "version": "1.0.0",
  "description": "A CLI tool to parse files and search for DQL commands to pass them to the DQL formatter.",
  "main": "src/index.ts",
  "bin": {
    "dql-format": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' '*.md' '*.json'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' '*.md' '*.json'"
  },
  "keywords": [
    "dql",
    "format",
    "formatter"
  ],
  "author": "Johannes Krahofer",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.11.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
